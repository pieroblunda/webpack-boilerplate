@import "variables"

body
  padding-top navbarHeight
  padding-bottom 3rem
  color #5a5a5a

.featurette-divider
  margin 5rem 0

.featurette-heading
  font-weight 300
  line-height 1
  letter-spacing -.05rem

.bd-placeholder-img
  font-size 1.125rem
  text-anchor middle
  user-select none

@media (min-width: 40em)
  .featurette-heading
    font-size 50px

@media (min-width: 62em)
  .featurette-heading
    margin-top 7rem

@media (min-width: 768px)
  .bd-placeholder-img-lg
    font-size 3.5rem